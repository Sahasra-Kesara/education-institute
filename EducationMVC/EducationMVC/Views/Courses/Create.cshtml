@model EducationMVC.Models.CourseDto

@{
    ViewData["Title"] = "Create Course";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Create Course</h1>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label asp-for="CourseName" class="form-label"></label>
            <input asp-for="CourseName" class="form-control" />
            <span asp-validation-for="CourseName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CourseDescription" class="form-label"></label>
            <textarea asp-for="CourseDescription" class="form-control" rows="4"></textarea>
            <span asp-validation-for="CourseDescription" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="TeacherId" class="form-label"></label>
            <select asp-for="TeacherId" class="form-select" asp-items="@(new SelectList(ViewData["Teachers"] as IEnumerable<EducationMVC.Models.Teacher>, "Id", "Name"))">
                <option value="">Select a Teacher</option>
            </select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Schedule" class="form-label"></label>
            <input asp-for="Schedule" class="form-control" />
            <span asp-validation-for="Schedule" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DurationInWeeks" class="form-label"></label>
            <input asp-for="DurationInWeeks" class="form-control" />
            <span asp-validation-for="DurationInWeeks" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>
